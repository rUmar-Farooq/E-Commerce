@{
    ViewData["Title"] = "Create Product";
}



    <div class="container py-5" style="margin-bottom: 60px;">

        <h2 class="mb-4">Create Product</h2>
        <form asp-action="CreateProduct" method="post" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-md-6">
                
                    <div class="mb-3">
                        <label for="ProductTitle" class="form-label">Product Title</label>
                        <input name="ProductTitle" class="form-control" required />
                        @* <span asp-validation-for="ProductTitle" class="text-danger"></span> *@
                    </div>

                
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="2" required></textarea>
                        @* <span asp-validation-for="Description" class="text-danger"></span> *@
                    </div>

                
                    <div class="mb-3">
                        <label for="ProductPicURl" class="form-label">Product Image URL</label>
                        <input name="ProductPicURl" class="form-control" type="url" required />
                        @* <span asp-validation-for="ProductPicURl" class="text-danger"></span> *@
                    </div>

                
                    <div class="mb-3">
                        <label for="Qty" class="form-label">Quantity</label>
                        <input name="Qty" class="form-control" type="number" min="1" required />
                        @* <span asp-validation-for="Qty" class="text-danger"></span> *@
                    </div>
                </div>

                <div class="col-md-6">
            
                    <div class="mb-3">
                        <label for="Category" class="form-label">Category</label>
                        <input name="Category" class="form-control" required />
                        @* <span asp-validation-for="Category" class="text-danger"></span> *@
                    </div>

                
                    <div class="mb-3">
                        <label for="SubCategory" class="form-label">Subcategory</label>
                        <input name="SubCategory" class="form-control" required />
                        @* <span asp-validation-for="SubCategory" class="text-danger"></span> *@
                    </div>

                
                    <div class="mb-3">
                        <label for="HashTags" class="form-label">Hashtags</label>
                        <input name="HashTags" class="form-control" placeholder="e.g. #electronics #new" required />
                        @* <span asp-validation-for="HashTags" class="text-danger"></span> *@
                    </div>

                   <div class="mb-3">
                        <label for="Price" class="form-label">Price</label>
                        <input name="Price" class="form-control" placeholder="Price Here" type="number" min="1" required />
                        @* <span asp-validation-for="HashTags" class="text-danger"></span> *@
                    </div>


                </div>

                   <div class="mt-4">
                        <button type="submit" class="btn btn-primary w-25">Create Product</button>
                    </div>
            </div>
        </form>
    </div>

